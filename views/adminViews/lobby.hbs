{{#if edit}}
<br>
<div class="row">
  <div class="col s9">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Horario</th>
          <th scope="col">Consultorio</th>
          <th scope="col">Doctor</th>
        </tr>
      </thead>
      <tbody>
        {{#if dtStatus}}
        <p>Aun no hay consultorios</p>
        {{else}}
        {{#each citas as |cita|}}
        <tr bgcolor='{{office.color}}'>
          <td>{{horario}}</th>
          <td>{{office.numero}}</th>
          <td>{{usuario.nombre}}</td>
        </tr>
        {{/each}}
        {{/if}}
      </tbody>
    </table>
  </div>
  <div class="col s3">
    <h5 class="center-align">Crear una cita</h5>
    <br>
    <form action="/admin/citas/edit/{{cita._id}}" method="POST">
      <select class="browser-default" name="usuario" required>
        <option disabled>Selecciona un doctor</option>
        {{#each doctores}}
        {{#if select}}
        <option value="{{_id}}" selected>{{nombre}}-{{tipoconsultorio}}</option>
        {{else}}
        <option value="{{_id}}">{{nombre}}-{{tipoconsultorio}}</option>
        {{/if}}
        {{/each}}
      </select>
      <br>
      <select class="browser-default" name="office" required>
        <option disabled>Selecciona un consultorio</option>
        {{#each consultorios}}
        {{#if select}}
        <option value="{{_id}}" selected>{{numero}}-{{tipoconsultorio}}</option>
        {{else}}
        <option value="{{_id}}">{{numero}}-{{tipoconsultorio}}</option>
        {{/if}}
        {{/each}}
      </select>
      <br>
      <input type="date" name="day" value='{{hoy}}' required>
      <br><br>
      <select class="browser-default" name="horario" required>
        {{#each horarios}}
        {{#if select}}
        <option value="{{horario}}" selected>{{horario}}</option>
        {{else}}
        <option value="{{horario}}">{{horario}}</option>
        {{/if}}
        {{/each}}
      </select>
      <br>
      <div class="row">
        <div class="col s6 offset-s3">
          <button class="waves-effect waves-light btn deep-orange darken-4">Guardar Cambios</button>
        </div>
      </div>
    </form>
  </div>

  {{else}}
  <br>
  <div class="row">
    <div class="col s9">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Horario</th>
            <th scope="col">Consultorio</th>
            <th scope="col">Doctor</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#if dtStatus}}
          <p>Aun no hay consultorios</p>
          {{else}}
          {{#each citas as |cita|}}
          <tr bgcolor='{{office.color}}'>
            <td>{{horario}}</th>
            <td>{{office.numero}}</th>
            <td>{{usuario.nombre}}</td>
            <td>
              <a href="/admin/citas/edit/{{_id}}"><i class="fas fa-edit fa-1x" style="color: #322d2d"></i></a>
            </td>
            <td>
              <a href="/admin/citas/delete/{{_id}}"><i class="fas fa-trash fa-1x" style="color: #322d2d;"></i></a>
            </td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
    <div class="col s3">
      <form action="/admin" method="POST">
        <div class="row">
          <div class="col s7">
            <input type="date" name="dia" value='{{hoy}}'>
          </div>
          <div class="col s5">
            <button class="waves-effect waves-light btn deep-orange darken-4">Buscar</button>
          </div>
        </div>
      </form>
      <h5 class="center-align">Crear una cita</h5>
      <br>
      <form action="/admin/citas/create" method="POST">
        <select class="browser-default" name="usuario" required>
          <option selected disabled>Selecciona un doctor</option>
          {{#each doctores}}
          <option value="{{_id}}">{{nombre}} - {{tipoconsultorio}}</option>
          {{/each}}
        </select>
        <br>
        <select class="browser-default" name="office" required>
          <option selected disabled>Selecciona un consultorio</option>
          {{#each consultorios}}
          <option value="{{_id}}">{{numero}} - {{tipoconsultorio}}</option>
          {{/each}}
        </select>
        <br>
        <input type="date" name="day" value='{{hoy}}' required>
        <br><br>
        <select class="browser-default" name="horario" required>
          {{#each horarios}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
        <br>
        {{#if err1}}
        {{err1}}
        {{/if}}
        <div class="row">
          <div class="col s6 offset-s4">
            <button class="waves-effect waves-light btn deep-orange darken-4">Agendar</button>
          </div>
        </div>
      </form>
    </div>
    {{/if}}